@model SZ.AutoClassics.Aplicacao.ViewModels.ApplicationUserViewModel

<h2>Editar usuário</h2>

<div class="container">
	<div class="row">
		<div class="col-md-4">
		</div>
		<div class="col-md-4">
			<form asp-controller="Account" asp-action="Editar" method="post" class="form-horizontal" role="form">
				<hr />
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="UserName" class="col-md-2 control-label"></label>
					<div class="col-md-6">
						<input asp-for="UserName" class="form-control" />
						<span asp-validation-for="UserName" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Email" class="col-md-2 control-label"></label>
					<div class="col-md-6">
						<input asp-for="Email" class="form-control" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
					<div class="col-md-6">
						<input asp-for="PhoneNumber" class="form-control" />
						<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="UltimaSenha" class="col-md-2 control-label"></label>
					<div class="col-md-6">
						<input asp-for="UltimaSenha" class="form-control" />
						<span asp-validation-for="UltimaSenha" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Senha" class="col-md-2 control-label"></label>
					<div class="col-md-6">
						<input asp-for="Senha" class="form-control" />
						<span asp-validation-for="Senha" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group" style="margin-top: 10px">
					<div class="col-md-8">
						<input type="submit" class="btn btn-success" value="Salvar" />
						<a class="btn btn-primary" href="javascript:window.history.back();">Voltar</a>
					</div>
				</div>
			</form>
		</div>
		<div class="col-md-4">
		</div>
	</div>
</div>