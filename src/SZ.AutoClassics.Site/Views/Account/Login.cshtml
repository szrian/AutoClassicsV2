@model SZ.AutoClassics.Aplicacao.ViewModels.LoginViewModel

<table class="table">
    <tr>
        <td><img src="~/images/login_48.png" alt="Fazer o Login" class="center-block" /></td>
        <td>
            <div class="row">
                <div class="col-10 col-md-10 col-lg-10">
                    <h4>Login</h4>
                    <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="UrlRetorno" />
                        <div class="form-group">
                            <label asp-for="UserEmail" class="col-md-2 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="UserEmail" class="form-control" />
                                <span asp-validation-for="UserEmail" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Senha" class="col-md-2 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="Senha" class="form-control" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group" style="margin-top: 10px">
                            <div class="col-md-8">
                                <input type="submit" class="btn btn-success" value="Entrar" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </td>
    </tr>
</table>