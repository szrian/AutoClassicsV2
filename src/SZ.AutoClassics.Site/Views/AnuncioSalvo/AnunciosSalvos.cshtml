@model SZ.AutoClassics.Aplicacao.ViewObjects.AnunciosFiltrosViewObject

<div><h2 style="margin-bottom: 40px">Anuncios Salvos</h2></div>

<div class="container">
	<div class="row">
		<div asp-validation-summary="All" class="text-danger"></div>
		@foreach (var anuncio in Model.Anuncios)
		{
			<div class="col-md-12">
				<div class="card mb-3" style="max-width: 540px;">
					<div class="row g-0">
						<div class="col-md-4">
							<img src="~/images/@anuncio.ImagemUrl.Split(";")[0]" class="img-fluid rounded-start" alt="Foto do anúncio" style="width: 181px; height: 211px">
						</div>
						<div class="col-md-8">
							<div class="card-body">
								<h5 class="card-title">@anuncio.Titulo</h5>
								<h4>@anuncio.Preco.ToString("C")</h4>
								<p class="card-text">@anuncio.Descricao</p>
								<a class="btn btn-primary" asp-controller="Anuncio" asp-action="AnuncioDetalhes" asp-route-id="@anuncio.Id">Detalhes</a>
								<button class="btn btn-danger" onclick="RemoverAnuncio('@anuncio.Id')"><i class="fa-solid fa-circle-xmark"></i> Remover</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>
@if (Model.Anuncios.Count() > 0)
{
	<div>
		<ul class="pagination">
			<li class="page-item">
				@Html.ActionLink("Anterior", "AnunciosSalvos", "AnuncioSalvo", new { pagina = Model.Filtros.Pagina - 1 }, new { @class = "page-link" })
			</li>
			@for (int i = 0; i < Model.Filtros.TotalRegistros / 20; i++)
			{
				<li class="page-item">
					@Html.ActionLink((i + 1).ToString(), "AnunciosSalvos", "AnuncioSalvo", new { pagina = i }, new { @class = "page-link" })
				</li>
			}
			<li class="page-item">
				@Html.ActionLink("Próximo", "AnunciosSalvos", "AnuncioSalvo", new { pagina = Model.Filtros.Pagina + 1 }, new { @class = "page-link" })
			</li>
		</ul>
	</div>
}
else
{
	<h2 class="text-danger">Nenhum anúncio encontrado :(</h2>
}

<script src="~/js/anunciosSalvos.js"></script>
<link href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.js"></script>
